{
  "compilerOptions": {
    "lib": ["ES5", "ES6", "ES2020", "DOM"],
    "module": "ES2020",
    "target": "ES6",
    "rootDir": "./src",
    "esModuleInterop": true,
    "removeComments": true,
    "moduleResolution": "node",
    "composite": false,
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
    "skipLibCheck": true,
    "sourceMap": false
  },
  "exclude": ["node_modules"]
}
